@page
@model LotusWebApplication.Pages.Country.CreateModel

@{
    ViewData["Title"] = "Add a Country";
}
<div class="colorrow neutral header">
    <label>Add a Country</label>
</div>
<form method="post">
    <div class="colorrow dark tag">
        <label>Basic Information</label>
    </div>
    <div class="row colorrow dark">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Country.CNT_Name" class="control-label"></label>
                <input asp-for="Country.CNT_Name" class="form-control" />
                <span asp-validation-for="Country.CNT_Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Country.CNT_Name_Fa" class="control-label"></label>
                <input asp-for="Country.CNT_Name_Fa" class="form-control" />
                <span asp-validation-for="Country.CNT_Name_Fa" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="colorrow neutral tag">
        <label>Form Buttons</label>
    </div>
    <div class="row colorrow neutral">
        <div class="form-group">
            <a asp-page="Index" class="btn-green borderlessinput">Back to List</a>
            <input type="submit" value="Add" class="btn-blue borderlessinput" />
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
