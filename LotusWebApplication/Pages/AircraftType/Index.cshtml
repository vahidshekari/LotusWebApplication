@page
@model LotusWebApplication.Pages.AircraftType.IndexModel

@{
    ViewData["Title"] = "List of Engines";
}

<div class="colorrow neutral header">
    <label>List of Engines</label>
    <div class="row"><a asp-page="Create" class="btn-blue borderlessinput" style="margin:auto">Add</a></div>
</div>
<div class="colorrow dark tag">
    <label>Table</label>
</div>
<div class="colorrow dark">
    <table id="myTable" class="table border" width="100%">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AircraftType[0].ACT_MarketName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AircraftType[0].ACT_OfficialName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AircraftType[0].ACT_TypeCertificate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AircraftType[0].Manufacturer)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AircraftType[0].Engines)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AircraftType[0].ACT_NumberofEngines)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AircraftType[0].APU)
                </th>
                <th style="width:20%" scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AircraftType)
            {
            <tr>
                <td scope="row" data-label="@Html.DisplayNameFor(model => model.AircraftType[0].ACT_MarketName)">
                    @Html.DisplayFor(modelItem => item.ACT_MarketName)
                </td>
                <td scope="row" data-label="@Html.DisplayNameFor(model => model.AircraftType[0].ACT_OfficialName)">
                    @Html.DisplayFor(modelItem => item.ACT_OfficialName)
                </td>
                <td scope="row" data-label="@Html.DisplayNameFor(model => model.AircraftType[0].ACT_TypeCertificate)">
                    @Html.DisplayFor(modelItem => item.ACT_TypeCertificate)
                </td>
                <td scope="row" data-label="@Html.DisplayNameFor(model => model.AircraftType[0].Manufacturer)">
                    @Html.DisplayFor(modelItem => item.Manufacturer.MAN_Desc)
                </td>
                <td scope="row" data-label="@Html.DisplayNameFor(model => model.AircraftType[0].Engines)">
                    @Html.DisplayFor(modelItem => item.Engines.ENG_Description)
                </td>
                <td scope="row" data-label="@Html.DisplayNameFor(model => model.AircraftType[0].ACT_NumberofEngines)">
                    @Html.DisplayFor(modelItem => item.ACT_NumberofEngines)
                </td>
                <td scope="row" data-label="@Html.DisplayNameFor(model => model.AircraftType[0].APU)">
                    @Html.DisplayFor(modelItem => item.APU.APU_Description)
                </td>
                <td scope="row" data-label="Action">
                    <a asp-page="./Edit" asp-route-id="@item.ACT_Code" class="btn-green">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.ACT_Code" class="btn-red">Delete</a>
                </td>
               
            </tr>
            }
        </tbody>
    </table>
</div>