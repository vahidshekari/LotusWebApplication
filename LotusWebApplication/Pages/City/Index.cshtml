@page
@model LotusWebApplication.Pages.City.IndexModel

@{
    ViewData["Title"] = "List of Cities";
}

<div class="colorrow neutral header">
    <label>List of Cities</label>
    <div class="row"><a asp-page="Create" class="btn-blue borderlessinput" style="margin:auto">Add</a></div>
</div>
<div class="colorrow dark tag">
    <label>Table</label>
</div>
<div class="colorrow dark">
    <table id="myTable" class="table border" width="100%">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.City[0].CTY_Name_Fa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City[0].CTY_Name_En)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City[0].Province)
                </th>
                <th style="width:20%" scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.City)
            {
            <tr>
                <td scope="row" data-label="@Html.DisplayNameFor(model => model.City[0].CTY_Name_Fa)">
                    @Html.DisplayFor(modelItem => item.CTY_Name_Fa)
                </td>
                <td scope="row" data-label="@Html.DisplayNameFor(model => model.City[0].CTY_Name_En)">
                    @Html.DisplayFor(modelItem => item.CTY_Name_En)
                </td>
                <td scope="row" data-label="@Html.DisplayNameFor(model => model.City[0].Province)">
                    @Html.DisplayFor(modelItem => item.Province.PRV_Title_En)
                </td>
                <td scope="row" data-label="Action">
                    <a asp-page="./Edit" asp-route-id="@item.CTY_Code" class="btn-green">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.CTY_Code" class="btn-red">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>